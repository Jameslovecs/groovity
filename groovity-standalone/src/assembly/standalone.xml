<?xml version="1.0" encoding="utf-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>standalone</id>
    <formats>
        <format>zip</format>
    </formats>
    <dependencySets>
    	<dependencySet>
    		<includes>
                <include>com.disney.groovity:groovity-standalone</include>
            </includes>
    	</dependencySet>
    </dependencySets>
    <fileSets>
         <fileSet>
			<directory>src/main/groovity</directory>
			<outputDirectory>groovity</outputDirectory>
			<includes>
				<include>*.grvt</include>
			</includes>
		  </fileSet>
        <fileSet>
			<directory>.</directory>
			<outputDirectory>conf</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>.</directory>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>.</directory>
			<outputDirectory>static</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>.</directory>
			<outputDirectory>target</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
    </fileSets>
</assembly>