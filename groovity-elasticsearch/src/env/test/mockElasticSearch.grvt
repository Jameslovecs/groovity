static conf=[
	'groovity.port':int.class
]

static web=[
	path:'/mockES/{esPath:.*}',
	output:'application/json',
	methods:['GET','DELETE','PUT','POST']
]

static List proxyData

static init(){
	def cl = Thread.currentThread().getContextClassLoader()
	//load previously recorded proxy data set
	proxyData = parse(value:cl.getResourceAsStream('/proxyData.json'))
	System.setProperty('es.baseUrl',"http://localhost:${conf['groovity.port']}/mockES/")
}

static destroy(){
	assert proxyData.isEmpty()
}

def expected = proxyData.removeAt(0)

assert expected.method == request.method

def compareUrl = esPath
if(request.queryString){
	compareUrl += "?${request.queryString}"
}

assert compareUrl == expected.url

response.setStatus(expected.status)

write(value:expected.response)