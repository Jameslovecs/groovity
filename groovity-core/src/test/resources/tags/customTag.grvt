model = ['a  b','c   d']

for(i in (1..3)){
	if(i % 2 == 1){
		model.each{ item ->
			out << <~
				${item}
			~>
		}
	}
	else{
		minified({
			model.each{ item ->
				out << <~
					${item}
				~>
			}
		})
	}
}
	
@Tag(
	info="Remove excess whitespace from body",
	body="A template whose output should be minified",
	attrs=[
		@Attr(
			name="keepNewlines",
			info="Whether to preserve line breaks",
			required=false
		)
	]
)
class Minified{
	def tag(Map atts, Closure body){
		Writer out = body.out;
		StringWriter writer = new StringWriter();
		body.out = writer;
		body.call();
		body.out = out;
		out << writer.toString().replaceAll(/\s+/, {it.indexOf('\n') == -1 ? ' ' : '\n'});
	}
}
