<~
<g:set var="num" value="${3*10}"/>
<g:set var="balance" value="${120000.2309}" />
<g:write value="${num}" />
<g:write value="${num}" format="|$%d"/>
<g:write value="${1224.37}" format="|%,.2f" />
<g:write value="${balance}" format="|$%,.2f"/>
<g:write value="${num*100}" format="|%,d%%"/>
<g:write value="${balance}" format="|%.3f"/>
<g:write value="${balance}" format="|%,13.3f"/>
<g:write value="${num}" format="|%03d"/>
<g:write value="${balance}" format="|%,.1f"/>
<g:write value="${num/2.0}" format="|%.1f"/>
<g:write value="${num/2.0}" format="|%.0f"/>
<g:write value="${[num,'hello',balance]}" format = "|(%06d) %s $%,.2f"/>
~>